<h1><%= @cocktail.name %></h1>

<h3>Doses:</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to 'X', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a dose to #{@cocktail.name}", new_cocktail_dose_path(@cocktail) %>
