<%= link_to 'back', cocktails_path(@cocktail)  %>

<h1><%= @cocktail.name %></h1>
<% if @cocktail.photos.any? %>
  <% @cocktail.photos.each do |photo| %>
    <%= cl_image_tag photo.path, width: 200, height: 300, crop: :fill %>
  <% end %>
<% end %>
<%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cocktail_path(@cocktail) %>




<h3>Doses:</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to 'X', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a dose to #{@cocktail.name}", new_cocktail_dose_path(@cocktail) %>
